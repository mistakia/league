          "prtd": 0,
          "krtd": 0,
          "trg": 0,
          "exclude_qb_kneels": false
        }
      }
    }
  ],
  "validation_scenarios": [
    {
      "scenario_name": "valid_complete_config",
      "description": "Complete valid configuration with hashes",
      "input": {
        "league_format": {
          "league_format_hash": "abc123",
          "sqb": 1,
          "srb": 2,
          "swr": 2
        },
        "scoring_format": {
          "scoring_format_hash": "def456",
          "py": 4,
          "tdp": 6
        }
      },
      "expected_result": true
    },
    {
      "scenario_name": "missing_league_hash",
      "description": "Invalid configuration missing league format hash",
      "input": {
        "league_format": {
          "sqb": 1,
          "srb": 2
        },
        "scoring_format": {
          "scoring_format_hash": "def456"
        }
      },
      "expected_result": false
    },
    {
      "scenario_name": "no_starting_positions",
      "description": "Invalid configuration with no starting positions",
      "input": {
        "league_format": {
          "league_format_hash": "abc123",
          "sqb": 0,
          "srb": 0,
          "swr": 0,
          "ste": 0,
          "srbwr": 0,
          "srbwrte": 0,
          "sqbrbwrte": 0,
          "swrte": 0,
          "sdst": 0,
          "sk": 0
        },
        "scoring_format": {
          "scoring_format_hash": "def456"
        }
      },
      "expected_result": false
    }
  ]
}
