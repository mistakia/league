      },
      "expected_output": {
        "league_format": {
          "num_teams": 12,
          "sqb": 1,
          "srb": 2,
          "swr": 3,
          "ste": 1,
          "srbwr": 1,
          "srbwrte": 0,
          "sqbrbwrte": 0,
          "swrte": 0,
          "sdst": 1,
          "sk": 1,
          "bench": 6,
