        "scoring_config": {
          "pass_yd": 0.04,
          "pass_td": 6,
          "pass_int": -2,
          "rush_yd": 0.1,
          "rush_td": 6,
          "rec": 1,
          "rec_yd": 0.1,
          "rec_td": 6,
          "fumble_lost": -2,
          "def_td": 6,
          "def_int": 2,
          "def_fumble_rec": 2,
          "def_sack": 1,
          "def_safety": 2,
          "def_block_kick": 2,
          "def_ret_td": 6
