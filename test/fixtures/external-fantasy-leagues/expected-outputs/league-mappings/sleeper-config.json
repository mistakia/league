          "reserve_short_term_limit": 0,
          "cap": 0,
          "min_bid": 0
        },
        "scoring_format": {
          "pa": 0,
          "pc": 0,
          "py": 4,
          "ints": -2,
          "tdp": 6,
          "ra": 0,
          "ry": 10,
          "tdr": 6,
          "rush_first_down": 0,
          "rec": 1,
          "rbrec": 0,
          "wrrec": 0,
          "terec": 0,
          "recy": 10,
          "rec_first_down": 0,
          "twoptc": 0,
          "tdrec": 6,
          "fuml": 0,
          "prtd": 0,
          "krtd": 0,
          "trg": 0,
          "exclude_qb_kneels": false
        }
      }
    },
    {
      "scenario_name": "minimal_sleeper_config",
      "description": "Minimal configuration with defaults",
      "input": {
        "platform": "sleeper",
        "league_config": {},
        "scoring_config": {},
        "roster_config": []
      },
      "expected_output": {
        "league_format": {
          "num_teams": 12,
          "sqb": 0,
          "srb": 0,
          "swr": 0,
          "ste": 0,
          "srbwr": 0,
          "srbwrte": 0,
          "sqbrbwrte": 0,
          "swrte": 0,
          "sdst": 0,
          "sk": 0,
          "bench": 0,
          "ps": 0,
          "reserve_short_term_limit": 0,
          "cap": 0,
