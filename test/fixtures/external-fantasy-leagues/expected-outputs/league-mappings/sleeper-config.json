        "roster_config": [
          "QB",
          "RB",
          "RB",
          "WR",
          "WR",
          "WR",
          "TE",
          "FLEX",
          "K",
          "DEF",
          "BENCH",
          "BENCH",
          "BENCH",
          "BENCH",
          "BENCH",
          "BENCH"
