.roster
  flex 1
  border-right 1px solid $borderColor
  width 220px

.roster__team
  background darken($backgroundColor, 7%)
  padding 8px
  display flex

  .team__name
    flex 1

.roster__salary
  flex 0 0 auto

.roster__toggle
  cursor pointer
  display flex
  align-items center
  justify-content center
  font-size 12px
  color #666

.roster__spacer
  background-color #f0f0f0
