.scoreboard__teams
  display flex
  flex-direction column
  margin 16px 0 16px
  overflow hidden
  overflow-x scroll
  border-radius 3px
  background white
  border 1px solid $borderColor

.scoreboard__teams-team
  flex 1
  padding 8px

  &.selected
    background lighten(yellow, 93%)

  + .scoreboard__teams-team
    border-top 1px solid $borderColor

.scoreboard__other-teams-container
  background white
  margin-bottom 16px
  border-radius 3px
  border 1px solid $borderColor

.scoreboard__other-teams-toggle
  padding 8px
  text-align center
  background #f5f5f5

  &:hover
    background #e0e0e0

.scoreboard__other-teams
  border-top 1px solid #e0e0e0