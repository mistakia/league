.league-select-team-container
  flex 0 0 auto

.league-select-team
  flex 0 0 auto
  display flex
  align-items flex-start
  
  .team__image
    margin 4px
    width 100px
    height 100px

.league-select-team-info
  display flex
  flex-direction column
  margin-left 16px
  gap 8px

.league-select-team-meta
  display flex
  gap 16px
  color rgba(0, 0, 0, 0.6)
  font-size 12px 
  font-weight 400
  font-family 'Inter', sans-serif
  padding-left 8px

.league-select-team__name
  margin-top 4px
  font-weight 500
  font-size 2em
  border 1px solid transparent
  cursor pointer
  padding 8px
  border-radius 4px
  transition background 120ms ease-in 0s, border 120ms ease-in 0s

  &:hover
    border 1px solid $borderColor
    background-color white

.league-select-team__popper
  z-index 4

.league-select-team__dropdown
  max-height 70vh

.league-select-team__scroll-container
  max-height inherit
  overflow-y auto

.league-select-team__item
  font-weight 400
  cursor pointer
  font-size 1rem
  line-height 1.5
  letter-spacing 0.00938em
  display flex
  justify-content flex-start
  align-items center
  padding 6px 16px
  white-space nowrap

  .team__image
    width 30px
    height 30px
    margin-right 16px

  &:hover
    background-color #f0f0f0


@media (max-width 775px)
  .league-select-team-container
    flex-basis 100%