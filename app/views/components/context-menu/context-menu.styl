.context__menu
  position fixed
  border 1px solid $borderColor
  border-radius 3px
  min-width 160px
  z-index 10002
  animation 141ms cubic-bezier(0.4, 0, 0.2, 1) 0ms 1 growIn
  transform-origin left top
  box-shadow $box_shadow
  background white

  &.bottom
    transform-origin left bottom

  &-input
    border 0
    width 300px
    input
      border-radius 0

  &-option
    padding 3px 20px
    line-height 32px
    width 100%
    cursor default
    font-size 12px
    color #b3b3b3
    &:hover
      background #333
      color white
    &:active
      color #e9e9e9
      background linear-gradient(to top, #555, #444)
    &.disabled
      color #666
      pointer-events none

  &-separator
    width 100%
    height 1px
    background #CCCCCC
    margin 0 0 0 0

.context__menu-backdrop
  fixed left right top bottom


@media (max-width 600px)
  .context__menu
    animation 225ms cubic-bezier(0, 0, 0.2, 1) 0ms 1 slideInFromBottom
    box-shadow 0px 8px 10px -5px rgba(0,0,0,0.2), 0px 16px 24px 2px rgba(0,0,0,0.14), 0px 6px 30px 5px rgba(0,0,0,0.12)

    .MuiListItem-root.MuiMenuItem-root
      padding 16px
      font-size 1rem
      font-family "Inter", "Helvetica", "Arial", sans-serif
      font-weight 400
      line-height 1.5
      letter-spacing 0.00938em

  .context__menu-backdrop
    background-color rgba(0, 0, 0, 0.5)
    animation 225ms cubic-bezier(0.4, 0, 0.2, 1) 0ms 1 fadeIn
    z-index 1300


@keyframes slideInFromBottom
  0%
    transform translateY(100%)
  100%
    transform translateY(0)

@keyframes fadeIn
  0%
    opacity 0
  100%
    opacity 1

@keyframes growIn
  0%
    transform scale(0)
  100%
    transform scale(1)
