.matchup
  display flex
  height 40px
  align-items center
  margin-bottom 8px

.matchup__week
  flex 0 0 60px
  text-transform uppercase
  color lighten($textColor, 30%)
  font-size 10px

.matchup__home
.matchup__away
  height 40px
  flex 1
  background #fafafa
  border 1px solid $borderColor
  border-radius 3px
  padding 8px 16px
  display flex
  align-items center

.matchup__home
  display flex
  justify-content flex-end

.matchup__divider
  flex 0 0 4px
  position relative
  height 40px

.matchup__versus
  absolute top left -20px
  height 40px
  width 40px
  display flex
  justify-content center
  align-items center
  border-radius 99em
  background white
  border 1px solid $borderColor
