$height = 45px

.matchup
  margin-bottom 8px
  overflow hidden
  margin 8px 16px
  flex 1
  min-width 260px
  background lighten($backgroundColor, 90%)

  .team__image
    flex 0 0 36px
    width 36px
    height 36px
    margin 0 8px 0 24px

  .team__name
    flex 1

.matchup__home
.matchup__away
  position relative
  height $height
  flex 1
  display flex
  align-items center
  justify-content space-between

.matchup__banner
  position absolute
  background-color $borderColor
  width 8px
  opacity 1
  height $height
  &:after
    position absolute
    content ""
    top 0
    background-color inherit
    height 100%
    width 100%

.matchup__col
  flex 0 0 50px
  width 50px
  display flex
  justify-content center
  align-items center
  font-weight 900
  background lighten(#666, 95%)
  height 100%

.matchup__head
  background $backgroundColor
  display flex
  justify-content flex-end

  .metric
    text-transform uppercase
    font-size 10px
    padding 4px 0
    background lighten(#666, 75%)
