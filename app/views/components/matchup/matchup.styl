$height = 45px

.matchup
  margin-bottom 8px
  overflow hidden
  margin 8px 16px
  flex 1 0 30%
  min-width 280px
  background lighten($backgroundColor, 90%)
  border-radius 8px
  border 1px solid $borderColor

  .team__image
    flex 0 0 36px
    width 36px
    height 36px
    margin 0 8px 0 24px

  .team__name
    flex 1

.matchup__home
.matchup__away
  position relative
  height $height
  flex 1
  display flex
  align-items center
  justify-content space-between

  &.winner
    .matchup__col
      font-weight 900
    .score
      font-size 16px

.matchup__banner
  position absolute
  background-color $borderColor
  width 2px
  opacity 1
  height $height
  &:after
    position absolute
    content ""
    top 0
    background-color inherit
    height 100%
    width 100%

.matchup__col
  display flex
  justify-content center
  align-items center
  font-weight 400
  background lighten(#666, 95%)
  height 100%

  &.spread
    flex 0 0 40px
    width 40px
    font-size 12px
    border-left 1px solid $borderColor

  &.score
    background white
    flex 0 0 80px
    width 80px
    font-size 13px

  &.proj
    flex 0 0 40px
    width 40px
    font-size 12px
    border-left 1px solid $borderColor
    border-right 1px solid $borderColor

.matchup__head
  background $backgroundColor
  display flex
  justify-content flex-end

  .matchup__col
    font-weight 800

  .metric
    text-transform uppercase
    font-size 10px
    padding 4px 0
    background $backgroundColor
    color $backgroundColor

.matchup__winner-arrow-left
  position absolute
  top 16px
  right 0
  width 0
  height 0
  border-top 6px solid transparent
  border-bottom 6px solid transparent
  border-right 6px solid red

@media (pointer: fine)
  .matchup:hover
    box-shadow $box_shadow

    .matchup__head
      .matchup__col.spread
      .matchup__col.proj
        background lighten(#666, 75%)
        color black

@media (min-width: 1250px)
  .matchup
    max-width 30%