$height = 50px

.matchup
  display flex
  height $height
  align-items center
  margin-bottom 8px

.matchup__week
  flex 0 0 60px
  text-transform uppercase
  color lighten($textColor, 30%)
  font-size 10px

.matchup__body
  flex 1
  display flex

.matchup__home
.matchup__away
  height $height
  flex 1
  width 48%
  background white
  border 1px solid $borderColor
  padding 8px 32px
  display flex
  align-items center

.matchup__away
  justify-content flex-end
  border-right 0
  border-radius 3px 0 0 3px

.matchup__home
  justify-content flex-start
  border-left 0
  border-radius 0 3px 3px 0

.matchup__divider
  flex 0 0 0
  position relative
  height $height

.matchup__versus
  absolute top left -20px
  height $height
  width 40px
  display flex
  justify-content center
  align-items center
  font-family Roboto, sans-serif
  font-size 20px
