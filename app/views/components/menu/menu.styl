.main__menu
  .MuiAppBar-root
    z-index 2
    border-bottom 1px solid $borderColor
  .MuiToolbar-root a
    padding 0 12px
    height 36px
    display flex
    align-items center
    border-radius 3px
    font-family 'IBM Plex Mono'
    &:hover
      background-color rgba(0,0,0,0.08)

    &.active
      font-weight 600
      background white

.MuiDrawer-paper.main__menu-paper
  width 250px

.league__head
  padding 8px

.league__title
  font-family 'IBM Plex Mono'
  font-size 21px
  padding-bottom 8px

@media (min-width 1051px)
  .main__menu-button.MuiFab-root
    display none

@media screen and (max-width 1050px)
  .main__menu
    display none
