$color = lighten(yellow, 92%)
$cutlistColor = lighten(red, 92%)

.dashboard__players-table
  .MuiToolbar-root
    border-bottom 1px solid $borderColor
  .table__body .table__row .table__cell.metric
    height 36px

.table__cell.player__item-team
  min-width 60px
  padding 6px

.section.waiver
  background #1976d2
  .dashboard__section-header-title
    color white

.section.cutlist
  border 1px solid red
  .dashboard__section-header-title
    color red
    display flex
    align-items center
  .MuiSvgIcon-root
    margin 0 6px

.player__item.reordering
  min-width auto


@media (max-width 600px)
  .dashboard__players-table
    .player__item-name.table__cell
      width 136px
      flex 0 0 136px

      .player__name-main
        display flex
        flex-direction column

      .player__name-position
        display none

      .player__name-top
        font-size 12px
        font-weight 600

    .table__row.waiver
    .table__row.claim
      .player__item-name.table__cell
          width 190px
          flex 0 0 190px

    .table__body .player__item-name.table__cell
      padding-left 0px