.scoreboard__player
  display flex
  height 60px
  align-items center

  &.projection .scoreboard__player-score
    color rgba(0,0,0,0.3)
    font-weight 300

.scoreboard__player-slot
  flex 0 0 60px
  font-size 12px
  font-weight 200
  color lighten(black, 50%)
  display flex

.scoreboard__player-score
  font-size 1em

.scoreboard__player-body
  flex 1
  display flex
  flex-direction column
  width 100%
  overflow hidden

.away
  .scoreboard__player
    justify-content flex-end
    margin-left 16px
    margin-right 8px
  .scoreboard__player-body
    order 2
  .scoreboard__player-score
    order 3

.home
  .scoreboard__player
    justify-content flex-start
    margin-left 8px
    margin-right 16px
  .scoreboard__player-score
    order 1
  .scoreboard__player-body
    order 2

  .player__name-expanded-main
    align-items flex-end
    .position
      order 3
    .team
      order 2
    .player__label-status
      order 1

  .player__label-rookie
    order 1
  .player__name-expanded-full-name
    order 2
