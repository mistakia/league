.draft__pick
  background white
  display flex
  align-items center
  height 46px
  padding 8px
  margin-bottom 16px
  border 1px solid transparent
  border-radius 3px
  &.active
    border-color $accentColor

  &.user
    background yellow

.draft__pick-player
  padding-bottom 4px

.draft__pick-player-name
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

.draft__pick-num
  flex 0 0 auto
  font-size 12px
  font-weight 800

.draft__pick-main
  flex 1
  padding 0 8px

.draft__pick-team
  font-size 12px

.draft__pick-window
  padding-top 4px
  font-size 12px
  font-weight 500
  color lighten($textColor, 40)
  &.active
    color $accentColor

.draft__pick-pos
  flex 0 0 auto
