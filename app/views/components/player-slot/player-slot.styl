.player__slot
  min-height 55px
  padding 8px
  display flex
  align-items center

  &:not(:last-child)
    border-bottom 1px solid $borderColor

  .player__name-expanded
    margin-bottom 8px

.player__slot-slotName
  color rgba(0,0,0,0.4)
  flex 0 0 48px
  font-size 12px

.player__slot-player
  flex 1

.player__slot-projected-points
  flex 0 0 40px
  display flex
  justify-content flex-end

.player__slot-projected-stats
  color rgba(0,0,0,0.5)
  font-weight 400
  padding 4px 0
  font-size 11px

.player__slot-action
  flex 0 0 100px
  display flex
  justify-content flex-end

@media (max-width 600px)
  .player__slot
    padding 4px 8px
