.auction-pass-button
  margin: 8px 4px
  min-width: 100px
  
  &--enabled
    border-color: #f44336
    color: #f44336
    
    &:hover
      background-color: rgba(244, 67, 54, 0.04)
      border-color: #d32f2f
      
  &--passed
    background-color: #4caf50
    color: white
    
    &:disabled
      opacity: 1
      background-color: #4caf50
      color: white
      
  &--not-eligible
    border-color: #9e9e9e
    color: #9e9e9e
    
  &--disabled
    border-color: #e0e0e0
    color: #bdbdbd