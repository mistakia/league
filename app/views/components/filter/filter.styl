.player__filter
  position relative
  border 1px solid darken($borderColor, 10)
  border-radius 3px
  padding 4px 8px
  display flex
  flex-direction column
  background #f0f0f0
  cursor pointer
  user-select none
  max-width 150px
  margin 0px !important
  min-height 35px
  flex 0 0 auto
  &:hover
    background darken(#f0f0f0, 10)
    .player__filter-label
      color $accentColor

  + .player__filter
    margin-left 8px !important

.player__filter-label
  font-size 0.6875rem
  font-weight 700
  color lighten($textColor, 10)
  text-transform uppercase
  letter-spacing 0.02em

.player__filter-dropdown
  background white
  border 1px solid $borderColor
  position absolute
  top 3rem
  min-width 150px
  z-index 10001
  display flex
  flex-direction column
  padding 8px
  box-shadow rgba(0, 0, 0, 0.2) 0px 3px 3px -2px, rgba(0, 0, 0, 0.14) 0px 3px 4px 0px, rgba(0, 0, 0, 0.12) 0px 1px 8px 0px

.player__filter-dropdown-body
  display flex
  flex-direction column
  max-height 250px
  overflow hidden
  overflow-y scroll

.player__filter-dropdown-item
  flex 1
  padding 8px 16px
  border 1px solid transparent
  margin-bottom 4px
  border-radius 3px

  &.selected
    background #f0f0f0
    border-color darken(#f0f0f0, 1)

  &:hover
    background #fafafa
    border 1px solid $borderColor

.player__filter-selection
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.player__filter-dropdown-head
  display flex
  border-bottom 1px solid $borderColor
  margin-bottom 4px
  justify-content space-between
  padding 4px 0

.player__filter-dropdown-action
  background #f0f0f0
  padding 0.25rem 0.5rem
  border-radius 3px
  &:hover
    background darken(#f0f0f0, 30%)
