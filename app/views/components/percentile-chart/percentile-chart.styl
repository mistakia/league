.percentile__chart
  display flex
  border-bottom 1px solid $borderColor
  padding 8px 0

.percentile__chart-title
  flex 0 0 100px
  display flex
  align-items center

.percentile__chart-value
  flex 0 0 60px
  display flex
  align-items center

.percentile__chart-bars
  flex 1
  position relative

.percentile__chart-player-bar
  position absolute
  top calc(50% - 4px)
  left 0
  height 8px
  background black
