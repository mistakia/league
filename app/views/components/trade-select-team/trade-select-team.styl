.trade__select-team
  position relative
  user-select none

  .icon
    cursor pointer

  &:hover .icon
    fill $accentColor

.trade__select-team-body
  background white
  border 1px solid $borderColor
  position absolute
  top 1rem
  min-width 150px
  max-width 200px
  z-index 10001
  display flex
  flex-direction column
  padding 8px
  box-shadow rgba(0, 0, 0, 0.2) 0px 3px 3px -2px, rgba(0, 0, 0, 0.14) 0px 3px 4px 0px, rgba(0, 0, 0, 0.12) 0px 1px 8px 0px

.trade__select-team-body-item
  flex 1
  padding 6px 16px
  border 1px solid transparent
  margin-bottom 4px
  border-radius 3px
  cursor pointer

  &:hover
    background #fafafa
    border 1px solid $borderColor
