.trade__menu
  flex 1
  height 100%
  background white
  border 1px solid $borderColor
  margin 24px 16px

.trade__menu-item
  padding 8px
  cursor pointer
  &:hover
    background #f0f0f0
  &.selected
    color $accentColor
    font-weight bold

.trade__menu-head
  padding 8px
  font-weight 600
  display flex
  justify-content center
  align-items center
  border-bottom 1px solid $borderColor
