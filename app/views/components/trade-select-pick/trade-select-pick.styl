.trade__select-pick
  flex 1
  display flex
  align-items center
  padding 10px 12px
  gap 10px
  border-radius 6px
  transition all 0.2s ease
  cursor pointer
  min-height 48px

  &:hover
    background-color rgba(0, 0, 0, 0.02)

  &.selected
    background-color rgba(33, 150, 243, 0.08)
    border-left 3px solid #2196f3

  @media (max-width: 768px)
    padding 8px 10px
    gap 8px
    min-height 44px

.pick__content
  flex 1
  display flex
  align-items center
  gap 8px
  flex-wrap wrap
  min-width 0
  overflow hidden

.pick__year
  font-size 14px
  font-weight 600
  color #212121
  line-height 1.4
  white-space nowrap

  @media (max-width: 768px)
    font-size 13px

.pick__round
  font-size 14px
  font-weight 500
  color #212121
  line-height 1.4
  white-space nowrap

  @media (max-width: 768px)
    font-size 13px

.pick__number
  font-size 13px
  font-weight 600
  color rgba(156, 39, 176, 0.9)
  line-height 1.4
  white-space nowrap
  padding 2px 6px
  background-color rgba(156, 39, 176, 0.1)
  border-radius 4px
  display inline-flex
  align-items center
  gap 2px

  @media (max-width: 768px)
    font-size 12px
    padding 1px 5px

.pick__str
  font-size 11px
  font-weight 400
  color rgba(156, 39, 176, 0.7)
  margin-left 2px

  @media (max-width: 768px)
    font-size 10px

.pick__team
  font-size 12px
  color rgba(0, 0, 0, 0.6)
  font-weight 400
  margin-left 2px
  flex-shrink 0
  white-space nowrap

  @media (max-width: 768px)
    font-size 11px
