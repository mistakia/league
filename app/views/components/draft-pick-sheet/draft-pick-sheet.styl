.draft-pick-sheet-body
  padding 60px 20px 20px 20px
  display flex
  flex-direction column
  gap 24px
  overflow-y auto
  flex 1

.draft-pick-sheet-section
  &:last-child
    margin-bottom 40px

.draft-pick-sheet-section-title
  font-family 'IBM Plex Mono', monospace
  font-weight 800
  text-transform uppercase
  font-size 11px
  padding 2px
  border-bottom 1px solid $borderColor
  width 100%
  text-align center
  height 24px
  display flex
  align-items center
  justify-content center
  letter-spacing 1px
  margin 0 0 16px 0

.draft-pick-sheet-empty
  text-align center
  padding 20px
  font-style italic
  color lighten($textColor, 30%)
  font-size 14px

.trade-history-timeline
  display flex
  flex-direction column
  position relative
  padding-left 24px

.timeline-item
  position relative
  padding 16px 0
  
  &:first-child
    padding-top 0
    
  &:last-child
    padding-bottom 0
    .timeline-connector
      display none

.timeline-connector
  position absolute
  left -18px
  top 30px
  bottom -8px
  width 1px
  background-color lighten($borderColor, 10%)

.timeline-marker
  position absolute
  left -22px
  top 16px
  width 8px
  height 8px
  border-radius 50%
  z-index 1
  display flex
  align-items center
  justify-content center
  
  .timeline-item--original &
    border-color $accentColor
    background-color $accentColor
        
  .timeline-item:first-child &
    top 0

.timeline-marker-icon.MuiSvgIcon-root
  width 18px
  height 18px
  color $borderColor
  
  .timeline-item--current &
    color $successColor

.timeline-content
  display flex
  flex-direction column
  gap 4px

.timeline-label
  font-size 11px
  font-weight 600
  text-transform uppercase
  letter-spacing 0.5px
  color lighten($textColor, 40%)
  
  &--used
    color $successColor
    font-weight 700

.timeline-team
  font-weight 700
  font-size 14px

.timeline-date
  font-size 12px
  color lighten($textColor, 30%)

.timeline-transfer
  display flex
  align-items center
  gap 8px
  font-weight 600
  font-size 14px

.timeline-arrow
  color lighten($textColor, 50%)
  font-size 12px

.draft-pick-items-container
  display flex
  flex-direction column
  gap 4px
  align-items center
  width 100%

@media (max-width: 768px)
  .draft-pick-sheet-body
    padding 50px 16px 16px 16px
    gap 20px