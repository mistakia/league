.auction__targets-head
  display flex
  justify-content flex-end
  align-items center
  padding 16px 0
  .MuiFormControlLabel-label
    font-size 11px
    font-weight 200
  .MuiFormGroup-root
    margin-right 16px

.auction__targets-body
  display flex

.auction__targets-column
  flex 1
  display flex
  flex-direction column
  + .auction__targets-column
    margin-left 16px

.auction__targets-section
  flex 0 0 auto
  background white
  border 1px solid $borderColor
  + .auction__targets-section
    margin-top 16px

.auction__targets-player
  display flex
  border-right 4px solid transparent

  &.optimal
    border-right 4px solid $accentColor

  .player__watchlist-action
    opacity 0
  &:hover .player__watchlist-action
    opacity 1

  &.signed
    background lighten(green, 93%)
    font-weight bold

  &.rostered
    text-decoration line-through
    color #8f8f8f

.optimal__lineup-key
  background white
  border 1px solid $borderColor
  color $accentColor
  border-right 4px solid $accentColor
  height 35px
  display flex
  align-items center
  padding 8px
  text-transform uppercase
  margin-left 8px

.auction__targets-player-salary
  padding 8px
  background #fafafa
  border-right 1px solid $borderColor
  margin-right 8px
  flex 0 0 45px

.auction__targets-player-meta
  width 100px
