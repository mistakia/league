.player__item
  &.selected
    background #fafafa
    .player__item-name.table__cell
      background #fafafa

  .player__item-menu
    display none

.player__item-position
  flex 0 0 50px
  display flex

.player__item-name
  flex 0 0 150px
  width 150px
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  &.table__cell
    flex 0 0 250px
    width 250px
    background white
    border-right 1px solid #f0f0f0
    padding 0 4px 0 4px

.player__item-metric
  flex 1
  font-family "DecimaMonoPro",monospace
  font-weight 600

.player__item-action.table__cell
  flex 0 0 45px
  width 45px
  padding 0
  display flex
  justify-content center
  align-items center
  &.reorder
    cursor row-resize

.player__item-menu
  margin-right 4px

@media (pointer:fine)
  .player__item:hover
    background #fafafa
    .player__item-name.table__cell
      background #fafafa
    .player__item-menu
      display flex

@media (pointer:coarse)
  .player__item.waiver .player__item-menu
    display flex
