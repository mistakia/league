.player__item
  &.selected
    background #fafafa

  .player__item-menu
    display none

.player__item-position
  flex 0 0 50px
  display flex

.player__item-action.table__cell
  flex 0 0 45px
  width 45px
  padding 0
  display flex
  justify-content center
  align-items center
  &.reorder
    background #f8f8f8

.table__row-summary .player__item-action.table__cell.reorder
  background #efefef

.table__body .player__item-action.table__cell.reorder
  cursor row-resize
  height 36px
  border-bottom 1px solid #e8e8e8

.player__item-menu
  margin-right 4px
  margin-left 4px

@media (pointer:coarse)
  .player__item.claim .player__item-menu
    display flex
