.player__item
  position relative
  display flex
  align-items center
  height 45px
  border-bottom 1px solid $borderColor
  background white

  &.reordering .player__item-action
  &:hover .player__item-action
    opacity 1

  &.selected
    background #fafafa

.player__item-position
  flex 0 0 50px
  display flex

.player__item-name
  flex 0 0 150px
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

.player__item-metric
  flex 1
  font-family "DecimaMonoPro",monospace
  font-weight 600

.player__item-action
  opacity 0
  flex 0 0 45px
  &.reorder
    cursor row-resize
