.scoreboard__scores
  display flex
  padding 32px 16px
  margin 0 -16px
  overflow hidden
  overflow-x scroll

.scoreboard__matchup
  flex 1
  padding 8px
  min-width 160px
  border-radius 3px
  background white
  box-shadow 0px 2px 1px -1px rgba(0,0,0,0.2), 0px 1px 1px 0px rgba(0,0,0,0.14), 0px 1px 3px 0px rgba(0,0,0,0.12)

  &.selected
    background lighten(yellow, 93%)

  + .scoreboard__matchup
    margin-left 16px
