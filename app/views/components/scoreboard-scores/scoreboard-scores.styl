.scoreboard__scores
  display flex
  padding 32px 16px
  margin 0 -16px
  overflow hidden
  overflow-x scroll

.scoreboard__matchup
  flex 1
  padding 8px
  min-width 120px
  border-radius 3px
  background white
  box-shadow 0px 2px 1px -1px rgba(0,0,0,0.2), 0px 1px 1px 0px rgba(0,0,0,0.14), 0px 1px 3px 0px rgba(0,0,0,0.12)

  + .scoreboard__matchup
    margin-left 16px

.scoreboard__matchup-team
  display flex
  line-height 20px
  .team__name
    flex 1
  + .scoreboard__matchup-team
    margin-top 2px

.scoreboard__matchup-score
  flex 0 0 40px
  background #f0f0f0
