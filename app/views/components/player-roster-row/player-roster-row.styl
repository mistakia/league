.roster__item
  display flex
  align-items center
  border-bottom 1px solid $borderColor
  height 30px

  .roster__item-action
    display none

  &:hover .roster__item-action
    display flex

  &.selected
    background lighten($accentColor, 85%)

.roster__item-name
  flex 1
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  display flex
  align-items center
  padding-right 4px

.roster__item-metric
  flex 0 0 30px

@media (min-width 601px)
  .roster__item:hover .roster__item-salary
    display none
