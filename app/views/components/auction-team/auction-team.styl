.auction__team
  flex 1
  display flex
  flex-direction column
  align-items center
  position relative
  padding 18px 0
  + .auction__team
    border-left 1px solid $borderColor

  &.offline
    color lighten($textColor, 75%)

  &.nominating
    background #f0f0f0
    &:before
      absolute top left right
      content 'nominating'
      text-transform uppercase
      font-size 8px
      display flex
      justify-content center
      padding-top 4px
      color lighten($textColor, 60%)

.auction__winning-bid
  absolute left bottom right
  background $accentColor
  color white
  padding 4px
  display flex
  justify-content center
  font-size 10px

.auction__team-name
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
