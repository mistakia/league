html
  height 100%
  width 100%
  overflow hidden
  text-size-adjust 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  text-rendering: optimizeLegibility

body
  position relative
  font-family "Roboto", "Helvetica", "Arial", sans-serif
  font-size 14px
  color $textColor
  height 100%
  width 100%
  overflow hidden
  background-color $backgroundColor

main
#root
  height 100%

.auth
  display flex
  height 100%
  justify-content center
  align-items center

.auth__side
  flex 1
  background #fafafa
  border-right 1px solid $borderColor
  height 100%

.auth__main
  flex 2
  display flex
  flex-direction column
  height 100%
  justify-content center
  align-items center

.auth__toggle
  width 250px
  margin-top 16px

form#auth
  display flex
  flex-direction column
  width 250px
  .MuiFormControl-root
  button
    margin-top 16px
