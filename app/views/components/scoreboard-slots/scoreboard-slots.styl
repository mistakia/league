.scoreboard__slots
  flex 0 0 40px
  background #f0f0f0
  margin 16px 4px
  padding 50px 0
  display flex
  flex-direction column
  justify-content center
  align-items center
  border-radius 3px

.scoreboard__slots-slot
  flex 0 0 50px
  display flex
  align-items center
  color rgba(0,0,0,0.5)
  font-size 11px

@media (max-width 600px)
  .scoreboard__slots
    flex 0 0 20px
    margin 16px 0
  .scoreboard__slots-slot
    font-size 10px
