.selected-player-schedule-wrapper
  width 100%
  height 100%
  display flex
  flex-direction column

.selected-player-schedule-tabs-row
  display flex
  align-items center
  gap 8px
  position relative

  .MuiTab-root
    min-width 40px
    padding 0
    opacity 1

.selected__player-schedule-tabs
  margin-right 100px
  border-right 1px solid $borderColor

.filters-toggle-button
  background transparent
  border-radius 4px
  padding 6px 8px
  cursor pointer
  color #666
  font-size 12px
  min-width 32px
  height 32px
  display flex
  align-items center
  justify-content center
  position absolute
  right 8px
  z-index 10

  &:hover
    background-color rgba(0, 0, 0, 0.05)

  &:focus
    outline none

.selected-player-schedule-filters
  display flex
  gap 8px
  border-top 1px solid $borderColor
  border-bottom 1px solid $borderColor
  padding 4px 8px
  align-items center
  flex-wrap wrap
  background $backgroundColor

.schedule__tab.table__cell.metric
  flex-direction column
  width 60px
  flex 1 0 60px
  padding 4px 8px

.selected__table
  flex 1
  min-height 0
  width 100%
  max-width none
  overflow scroll

  .selected__table-header.sticky__column
    position sticky
    top 0
    z-index 2

  .player__selected-row.header
    position sticky
    z-index 2
    background rgb(239, 239, 239)
    
    &:nth-child(3)
      top 49px
    
    &:nth-child(4)
      top 73px
    
    &:nth-child(5)
      top 97px
    
    &:nth-child(6)
      top 121px
    
    &:nth-child(n+7)
      top 145px
    
    .sticky__column
      z-index 3
