.selected-player-schedule-wrapper
  width 100%
  height 100%
  display flex
  flex-direction column

.selected-player-schedule-tabs-row
  display flex
  align-items center
  gap 8px
  position relative

  .MuiTab-root
    min-width 40px
    padding 0
    opacity 1

.selected__player-schedule-tabs
  margin-right 100px
  border-right 1px solid $borderColor

.filters-toggle-button
  background transparent
  border-radius 4px
  padding 6px 8px
  cursor pointer
  color #666
  font-size 12px
  min-width 32px
  height 32px
  display flex
  align-items center
  justify-content center
  position absolute
  right 8px
  z-index 10

  &:hover
    background-color rgba(0, 0, 0, 0.05)

  &:focus
    outline none

.selected-player-schedule-filters
  display flex
  gap 8px
  border-top 1px solid $borderColor
  border-bottom 1px solid $borderColor
  padding 4px 8px
  align-items center
  flex-wrap wrap
  background $backgroundColor

.schedule__tab.table__cell.metric
  flex-direction column
  width 60px
  flex 1 0 60px
  padding 4px 8px

.selected__table
  flex 1
  min-height 0
  width 100%
  max-width none
  overflow scroll

  .selected__table-header.sticky__column
    position sticky
    top 0
    z-index 2

  // Only first Average (row 3) and first Over Average (row 7) are sticky
  // Row ordering: header (1), column headers (2), 4 avg rows (3-6), 4 adj rows (7-10), gamelogs (11+)
  .player__selected-row.header
    background rgb(239, 239, 239)

    // First Average row (Season Average) - sticky
    &:nth-child(3)
      position sticky
      top 49px
      z-index 2

      .sticky__column
        z-index 3

    // First Over Average row (Season Over Average) - sticky
    &:nth-child(7)
      position sticky
      top 73px
      z-index 2

      .sticky__column
        z-index 3
