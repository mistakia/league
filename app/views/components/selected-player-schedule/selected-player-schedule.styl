.selected-player-schedule-wrapper
  max-width fit-content
  margin 0 auto

.selected-player-schedule-tabs-row
  display flex
  align-items center
  gap 8px
  position relative

  .MuiTab-root
    min-width 40px
    padding 0
    opacity 1

.selected__player-schedule-tabs
  margin-right 100px
  border-right 1px solid $borderColor

.filters-toggle-button
  background transparent
  border-radius 4px
  padding 6px 8px
  cursor pointer
  color #666
  font-size 12px
  min-width 32px
  height 32px
  display flex
  align-items center
  justify-content center
  position absolute
  right 8px
  z-index 10

  &:hover
    background-color rgba(0, 0, 0, 0.05)

  &:focus
    outline none

.selected-player-schedule-filters
  display flex
  gap 8px
  border-top 1px solid $borderColor
  border-bottom 1px solid $borderColor
  padding 4px 8px
  align-items center
  flex-wrap wrap
  background $backgroundColor

.schedule__tab.table__cell.metric
  flex-direction column
  width 60px
  flex 1 0 60px
  padding 4px 8px
