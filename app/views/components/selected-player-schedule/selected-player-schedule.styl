.selected__player-schedule
  margin-bottom 16px
  overflow-y scroll
  margin 16px auto
  max-width 1200px
  display flex
  flex-direction column

.selected-player-schedule-tabs-row
  display flex
  align-items center
  gap 8px
  margin-right 8px

.filters-toggle-button
  background transparent
  border-radius 4px
  padding 6px 8px
  cursor pointer
  color #666
  font-size 12px
  min-width 32px
  height 32px
  display flex
  align-items center
  justify-content center
  flex-shrink 0

  &:hover
    background-color rgba(0, 0, 0, 0.05)
    border-color #ccc

  &:focus
    outline none
    border-color #1976d2

.selected-player-schedule-filters
  display flex
  gap 4px
  border-top 1px solid $borderColor
  border-bottom 1px solid $borderColor
  padding 4px 8px
  align-items center
  flex-wrap wrap
  background $backgroundColor

.schedule__tab.table__cell.metric
  flex-direction column
  width 60px
  flex 1 0 60px
  padding 4px 8px
