$height = 30px

.player__row
  height 100%
  display flex
  flex-direction column

  &.selected .player__row-main
    background lighten($accentColor, 95%)

.player__row-main
  display flex
  height $height
  align-items center
  &:hover
    background lighten(#f0f0f0, 3)

.row__name
.player__row-name
  flex 0 0 100px
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  margin-right 48px

.player__row-pos
  flex 0 0 50px
  display flex

.player__row-metric
  flex 0 0 50px
  text-align right

.player__row-expanded
  background #fafafa
  border 1px solid $borderColor
  overflow hidden
  overflow-y scroll

.expanded__section
  padding 16px
  display flex
  flex-direction column

.expanded__section-header
  flex 1
  height 40px
  display flex
  align-items center
  font-weight 500
  border-bottom 1px solid $borderColor

.expanded__row
  flex 1
  display flex
  height 24px
  line-height 16px
  align-items center
  &:hover
    background #f0f0f0

.row__action
  flex 0 0 24px
  cursor pointer
  &:hover
    fill $accentColor

.average__row
  border-top 1px solid $borderColor
  border-bottom 1px solid $borderColor

.expanded__action
  flex 1
  display flex
  justify-content flex-end
  padding-top 8px
  padding-right 8px

  &:hover .icon
    fill $accentColor
    cursor pointer
