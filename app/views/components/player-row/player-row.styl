$height = 30px

.player__row
  height 100%
  display flex
  flex-direction column

.player__row-main
  display flex
  height $height
  align-items center
  &:hover
    background lighten(#f0f0f0, 3)

.player__row-name
  flex 0 0 100px
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  margin-right 48px

.player__row-pos
  flex 0 0 50px
  display flex

.player__row-metric
  flex 0 0 50px
  text-align right

.player__row-expanded
  height 100%
  background #fafafa
  border 1px solid $borderColor
