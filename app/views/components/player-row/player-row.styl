$height = 30px

.player__row-lead
  display inline-flex
  height 100%
  align-items center
  position sticky
  z-index 1
  left 0
  border-right 1px solid $borderColor
  background $backgroundColor

.player__row
  height $height
  align-items stretch
  display flex
  white-space nowrap
  width max-content
  flex-wrap nowrap
  min-width 100%

  &.selected
  &.selected .player__row-lead
    background lighten($accentColor, 85%)

  &.fa
  &.fa .player__row-lead
    background lighten(orange, 80%)
    .player__row-availability
      color rgba(0,0,0,0.3)

  &.rostered
  &.rostered .player__row-lead
    background lighten($yellow, 12%)

  &.baseline__player
  &.baseline__player .player__row-lead
    border-bottom 2px solid red

  &.draft-order-1
  &.draft-order-1 .player__row-lead
    background lighten($red, 12%)
    color white

  &.draft-order-2
  &.draft-order-2 .player__row-lead
    background lighten($orange, 12%)

  &.draft-order-3
  &.draft-order-3 .player__row-lead
    background lighten($purple, 12%)
    color white

  &.draft-order-4
  &.draft-order-4 .player__row-lead
    background lighten($pink, 12%)

  &.draft-order-5
  &.draft-order-5 .player__row-lead
    background lighten($green, 12%)
    color white

  &.draft-order-6
  &.draft-order-6 .player__row-lead
    background lighten($cyan, 12%)

  &.draft-order-7
  &.draft-order-7 .player__row-lead
    background lighten($blue, 12%)
    color white

  &.draft-order-8
  &.draft-order-8 .player__row-lead
    background lighten($navy, 12%)
    color white

  &.draft-order-9
  &.draft-order-9 .player__row-lead
    background lighten($lime, 12%)

  &.draft-order-10
  &.draft-order-10 .player__row-lead
    background lighten($brown, 12%)
    color white

  &.draft-order-11
  &.draft-order-11 .player__row-lead
    background lighten($mint, 12%)

  &.draft-order-12
  &.draft-order-12 .player__row-lead
    background lighten($maroon, 12%)
    color white

.player__row-index
  flex 0 0 25px
  font-size 10px
  width 25px
  padding 0 3px

.player__row-name
  flex 0 0 150px
  width 150px
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  margin-right 16px
  line-height 20px

  .nfl__team
    margin-left 4px

.player__row-availability
  flex 0 0 50px
  width 50px
  overflow hidden
  display flex
  justify-content center
  align-items center
  border-left 1px solid $borderColor
  border-right 1px solid $borderColor
  background white
  height 100%

.row__single-metric
  flex 0 0 50px

.player__row-action
  flex 0 0 30px
  width 30px
  display flex
  justify-content center

.player__row-pos
  flex 0 0 50px
  width 50px
  display flex

.player__row-tag
  flex 0 0 30px
  width 30px
  display flex

.row__action
  flex 0 0 24px
  cursor pointer

.average__row
  border-top 1px solid $borderColor
  border-bottom 1px solid $borderColor

@media (max-width 600px)
  .player__row-name
    flex 1

  .player__row-action
    display none

  .player__row-pos
    width 30px
    flex 0 0 30px

  .player__row-name
    width 60px
    flex 0 0 60px
    margin-right 4px
    font-size 12px

  .player__row-tag
    width 24px
    flex 0 0 24px

@media (min-width 601px)
  .players__header .player__row-action.actions
    display none

  .player__row
    .player__row-action.actions
      display none

    .player__watchlist-action
      opacity 0

    .player__watchlist-action.selected
    &:hover .player__watchlist-action
      opacity 1

    &:hover
      .player__row-action.actions
        display flex
      .player__row-tag
        display none

@media (pointer: fine)
  .player__row
    &:hover
    &:hover .player__row-lead
      background white
      color black

  .player__row-name
    &:hover
      color $accentColor

  .row__action
    &:hover
      fill $accentColor
