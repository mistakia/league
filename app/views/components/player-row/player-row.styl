$height = 30px

.player__row
  height 100%
  display flex
  flex-direction column

  &.selected .player__row-main
    background lighten($accentColor, 85%)

.player__row-main
  display flex
  height $height
  align-items center
  &:hover
    background white

.row__name
.player__row-name
  flex 0 0 150px
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  margin-right 16px
  line-height 20px
  &:hover
    color $accentColor

.player__row-availability
  flex 0 0 50px
  overflow hidden
  display flex
  justify-content center
  align-items center
  border-left 1px solid $borderColor
  background white
  height 100%

.row__single-metric
  flex 0 0 50px

.player__row-action
  flex 0 0 45px
  display flex
  justify-content center

.player__row-pos
  flex 0 0 50px
  display flex

.row__action
  flex 0 0 24px
  cursor pointer
  &:hover
    fill $accentColor

.average__row
  border-top 1px solid $borderColor
  border-bottom 1px solid $borderColor

.value__inflation
  min-width 25px
  padding 0 4px
  font-size 11px
  &.positive
    color green
  &.negative
    color red

@media (max-width 600px)
  .player__row-name
    flex 1


@media (min-width 601px)
  .player__row
    .player__row-action button
    .player__watchlist-action
      opacity 0

    .player__watchlist-action.selected
    &:hover .player__row-action button
    &:hover .player__watchlist-action
      opacity 1
