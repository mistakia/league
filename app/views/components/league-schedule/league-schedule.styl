.league__schedule
  absolute left 16px
  font-size 11px
  font-weight 700
  cursor pointer
  &:hover
    color $accentColor

.league__schedule-item
  padding 8px 16px
  border-bottom 1px solid $borderColor
  font-family monospace
  font-size 11px
  display flex
  align-items center
  min-width 275px

.league__schedule-item-date
  flex 0 0 50px

.league__schedule-item-body
  flex 1
