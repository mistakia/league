.auction__main-bid
  flex 0 0 auto
  height 60px
  margin 16px 32px
  border 1px solid $borderColor
  background #fafafa
  display flex
  align-items center
  padding 8px

.auction__main-picture
  flex 0 0 80px

.auction__main-player
  flex 1

.auction__main-input
  flex 0 0 50px
  position relative
  height 36px
  border 1px solid $borderColor
  width 50px
  margin-right 16px
  input
    border none
    width 100%
    height 100%
    &::-webkit-inner-spin-button
    &::-webkit-outer-spin-button
      -webkit-appearance none
      margin 0

.auction__main-input-up
.auction__main-input-down
  height 50%
  width 15px
  display flex
  align-items center
  justify-content center
  border-left 1px solid $borderColor
  cursor pointer
  user-select none
  &:hover
    background #f0f0f0

.auction__main-input-up
  absolute top right
  border-bottom 1px solid $borderColor

.auction__main-input-down
  absolute bottom right

.auction__main-action
  flex 0 0 auto

.auction__main-timer
  flex 0 0 60px
  background white
  border 1px solid $borderColor
  margin 0 8px
  height 40px
  display flex
  justify-content center
  align-items center
  font-size 16px
