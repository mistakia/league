.auction__main-bid
  flex 0 0 auto
  height 60px
  display flex
  align-items center
  background white
  border-left 1px solid $borderColor
  border-right 1px solid $borderColor
  border-top 1px solid $borderColor

.auction__main-picture
  flex 0 0 80px

.auction__main-player
  flex 1

.auction__main-input
  flex 0 0 120px
  position relative
  height 100%
  width 120px
  margin-left 16px
  input
    border none
    width 60px
    height 100%
    margin-left 60px
    text-align center
    font-size 20px
    background #fafafa
    &::-webkit-inner-spin-button
    &::-webkit-outer-spin-button
      -webkit-appearance none
      margin 0

.auction__main-input-up
.auction__main-input-down
  right 60px
  left 0px
  height 50%
  display flex
  align-items center
  justify-content center
  cursor pointer
  user-select none
  color white
  background #fafafa
  border-left 1px solid #f0f0f0
  border-right 1px solid $borderColor
  &:hover
    background #f0f0f0

.auction__main-input-up
  absolute top
  color saturate(green, 10%)
  border-bottom 1px solid #f0f0f0

.auction__main-input-down
  absolute bottom
  color saturate(red, 10%)

.auction__main-action
  flex 0 0 auto
  .button
    min-width 150px

.auction__main-timer
  flex 0 0 60px
  height 100%
  display flex
  justify-content center
  align-items center
  font-size 30px
  background #fafafa
  border-right 1px solid #f0f0f0
