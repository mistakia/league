.transaction
  display flex
  background white
  border-radius 3px
  padding 3px 16px

.transaction__main
  display flex
  flex 1

.transaction__meta
  flex 1
  display flex

.transaction__value
  flex 0 0 35px
  display flex
  align-items center
  font-size 11px

.transaction__timestamp
  flex 1
  display flex
  .timestamp
    font-size 10px

.transaction__type
  flex 0 0 80px
  display flex
  text-transform uppercase
  align-items center
  color lighten($textColor, 40%)
  font-size 10px
  font-weight bold

.transaction__player
  flex 1
  display flex

.transaction__team
  flex 1
  display flex
  align-items center
  max-width 200px
  .team__name
    padding 0
    font-size 12px

@media (max-width 800px)
  .transaction
    padding 6px 3px

  .transaction__main
    flex-direction column
    flex 0 0 185px

  .transaction__type
    padding 8px 0

  .transaction__meta
    flex-direction column

  .transaction__timestamp .timestamp
    flex-direction row
    width 100%
