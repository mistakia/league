.selected__player-paper.MuiDrawer-paper
  height calc(100% - 64px)
  border-radius 36px 36px 0 0

.selected__player-header
  display flex
  align-items center
  label
    font-size 10px
    font-family "Inter", "Helvetica", "Arial", sans-serif;
    font-weight 300
    text-transform uppercase
    display block
    padding-bottom 6px

  .player__watchlist-action
    margin 0 16px 0 8px

.selected__player-header-item
  flex 0 1 10%
  font-weight 800
  font-size 16px
  display flex
  flex-direction column
  justify-content center
  align-items center
  padding 16px
  min-width 80px

.selected__player-header-lead
  flex 0 0 auto
  display flex
  flex-direction column
  padding 8px 16px 0 24px
  justify-content center

.selected__player-header-secondary
  flex 1
  display flex
  background white

.selected__player-first-name
  font-weight 400
  text-transform uppercase

.selected__player-last-name
  font-weight 600
  font-size 2em
  text-transform uppercase

.selected__player-header-section
  flex 1
  display flex
  flex-wrap wrap
  justify-content flex-start
  border-radius 16px
  overflow hidden

.selected__player-main
  display flex
  flex-direction column
  overflow hidden
  height 100%

  .TabPanelUnstyled-root
    height 100%
    overflow hidden
    overflow-y scroll

.selected__player-body
  flex 1
  background #f0f0f0
  overflow-y auto
  -webkit-overflow-scrolling touch

.selected__section
  padding 16px
  display flex
  flex-direction column
  max-width 1100px
  margin 0 auto
  border-radius 10px
  background white
  margin-bottom 16px
  overflow-y scroll
  &:first-child
    margin-top 16px

.selected__section-header
  flex 1
  height 40px
  display flex
  align-items center
  font-weight 500
  border-bottom 1px solid $borderColor
  font-size 12px

.player__selected-row
  flex 1
  display flex
  height 24px
  line-height 16px
  align-items center
  &:hover
    background #f0f0f0

  &.header
    border-bottom 1px solid #f0f0f0

.selected__player-action
  absolute top 16px right 16px
  width 45px
  height 45px
  display flex
  justify-content flex-end
  padding-top 8px
  padding-right 8px

  &:hover .icon
    fill $accentColor
    cursor pointer

.selected__player-meta .position
  margin-right 8px

.selected__player-menu
  flex 1
  height 100%
  overflow hidden
  display flex
  flex-direction column

@media (min-width 901px)
  .selected__player-header
    .player__headshot
      border-radius 0

@media (max-width 800px)
  .selected__player-header-section
    justify-content center

@media (max-width 900px)
  .selected__player-header .player__headshot
    margin 8px 0 0 8px

@media (max-width 750px)
  .selected__player-header
    flex-wrap wrap

  .selected__player-header-secondary
    flex-basis 100%

  .MuiButtonBase-root.selected__player-close
    absolute top 16px right 0px
