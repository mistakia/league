.position
  flex 0 0 auto
  padding 3px 5px
  font-size 11px
  font-weight 500
  border-radius 4px
  color white
  display inline
  &.QB
    background tint(red, 25%)
  &.WR
    background tint(orange, 25%)
  &.RB
    background tint(green, 25%)
  &.TE
    background tint(blue, 25%)
  &.K
    background tint(grey, 25%)
  &.DST
    background tint(black, 25%)
