.page
  absolute left right top bottom 75px
  height 100%
  overflow hidden
  display flex

main > .page
  padding-top $menuHeight

.page__main
  flex 1
  display flex
  flex-direction column
  width 100%

.page__head
  flex 0 0 40px
  display flex

.page__body
  flex 1
  position relative
  height 100%

.page__menu
  flex 0 120px
  border-left 1px solid $borderColor
  .menu
    display flex
    flex-direction column
    padding-top 15px
    a
      border-radius 0
    a.active
      border-color darken($borderColor, 50%)

@media screen and (max-width: 1050px)
  .page__menu
    display none
