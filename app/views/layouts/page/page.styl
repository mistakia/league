.page
  absolute left right top bottom 75px
  height 100%
  overflow hidden
  display flex
  flex-direction column

.page__main
  flex 1
  display flex
  flex-direction column
  width 100%
  height 100%

.page__head
  flex 0 0 auto
  display flex

.page__body
  flex 1
  position relative
  overflow hidden

.page__menu
  flex 0 0 auto
  background lighten($backgroundColor, 50%)
  border-bottom 1px solid lighten($borderColor, 40%)
  padding 8px 0
  .menu
    display flex
    justify-content center
    a
      font-size 13px
      font-family 'IBM Plex Mono'

@media (min-width: 1051px)
  main > .page
    padding-top $menuHeight

@media screen and (max-width: 1050px)
  .page__menu
    display none
