.page
  absolute left right top bottom 75px
  height 100%
  overflow hidden
  display flex

main > .page
  padding-top 60px

.page__main
  flex 1
  diplay flex
  flex-direction column
  width 100%

.page__head
  flex 0 0 40px
  display flex

.page__body
  flex 1
  position relative
  height 100%

.page__menu
  flex 0 120px
  background #fafafa
  .menu
    display flex
    flex-direction column
    padding-top 15px
    a
      border-left 2px solid $borderColor
    a.active
      border-color darken($borderColor, 50%)
