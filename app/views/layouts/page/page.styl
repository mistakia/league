.page
  absolute top 0 left 0 right 0 bottom 0
  display flex
  flex-direction column

.page__head
  flex 0 0 auto
  display flex

.page__body
  flex 1
  position relative
  overflow hidden

@media (min-width 800px)
  .page
    transition margin 225ms cubic-bezier(0, 0, 0.2, 1) 0ms
  .menu__open .page
    margin-left $menuWidth
