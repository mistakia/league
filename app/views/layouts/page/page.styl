.page
  absolute left right top bottom 75px
  height 100%
  overflow hidden
  display flex
  padding-top 60px

.page__main
  flex 1
  diplay flex
  flex-direction column

.page__head
  flex 0 0 40px
  display flex

.page__body
  flex 1
  position relative
  height 100%

.page__menu
  flex 0 120px
  .menu
    display flex
    flex-direction column
    padding-top 15px
    a
      border-left 2px solid $borderColorLight
    a.active
      border-color $borderColor
