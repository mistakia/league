.auction
  display flex
  height 100%

.auction__players
  flex 1
  max-width 300px
  display flex
  flex-direction column
  background white
  border 1px solid $borderColor
  margin 16px
  border-radius 3px

.auction__players-header
  flex 0 0 auto
  border-bottom 1px solid $borderColor
  margin 0 16px
  padding 16px 0
  display flex

.auction__players-body
  flex 1
  height 100%
  overflow hidden
  overflow-y scroll

.auction__main
  flex 4
  display flex
  flex-direction column
  margin 16px 32px 0

.auction__teams
  display flex
  flex-wrap nowrap
  justify-content center
  align-items center
  background white
  border 1px solid $borderColor
  margin-bottom 24px

.auction__main-board
  flex 1
  padding-top 16px
  overflow hidden
  overflow-y scroll

.auction__log
  flex 1
  overflow-y scroll
