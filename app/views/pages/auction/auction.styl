.auction
  display flex
  height 100%

.auction__players
  flex 1
  display flex
  flex-direction column

.auction__players-header
  flex 0 0 40px
  height 45px
  border-bottom 1px solid $borderColor
  margin 0 8px
  padding 4px 0
  display flex

.auction__players-body
  flex 1
  height 100%
  overflow hidden
  overflow-y scroll

.auction__main
  flex 3
  border-left 1px solid $borderColor
  border-right 1px solid $borderColor
  display flex
  flex-direction column

.auction__teams
  display flex
  flex-wrap nowrap
  border-bottom 1px solid $borderColor
  justify-content center
  align-items center

.auction__main-board
  flex 1
  border-top 1px solid $borderColor
  padding-top 16px
  overflow hidden
  overflow-y scroll

.auction__log
  flex 1
  overflow-y scroll
