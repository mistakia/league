.auction
  absolute left 0 top 0 right 0 bottom 0
  display flex
  flex-direction column

.auction__menu
  display flex
  height 100%
  flex-direction column

  .base-TabPanel-root
    height 100%
    position relative

  .base-TabsList-root
    flex 0 0 auto

.auction__main-board
  display flex
  height 100%
  flex-direction column
  flex 1
  overflow hidden
  overflow-y scroll
  background white

@media (max-width 800px)
  .auction__main
    margin 0