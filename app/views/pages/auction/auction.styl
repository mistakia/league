.auction
  display flex
  height 100%

.auction__players
  flex 1
  max-width 300px
  display flex
  flex-direction column
  background white
  border 1px solid $borderColor
  margin 1%
  border-radius 3px

.auction__players-header
  flex 0 0 auto
  border-bottom 1px solid $borderColor
  margin 0 16px
  padding 16px 0
  display flex
  align-items center
  .search__filter
    border 1px solid $borderColor
    border-radius 8px

.auction__players-footer
  flex 0 0 auto
  border-top 1px solid $borderColor
  display flex
  padding 4px 16px
  margin 0 16px
  jusitfy-content end
  .MuiFormGroup-root
    flex 1
  .MuiFormControlLabel-label
    font-size 11px

.auction__players-body
  flex 1
  height 100%
  overflow hidden
  overflow-y scroll

.auction__main
  flex 3
  display flex
  flex-direction column
  margin 1% 1% 0

.auction__teams
  display flex
  flex-wrap nowrap
  justify-content center
  align-items center
  background white
  border 1px solid $borderColor
  margin-bottom 24px

.auction__main-board
  flex 1
  overflow hidden
  overflow-y scroll
  border-top 1px solid $borderColor

.auction__side
  flex 1
  min-width 280px
  display flex
  flex-direction column
  padding 1%
  height 100%
  overflow hidden

.auction__log
  flex 1
  border 1px solid $borderColor
  border-radius 3px
  margin-top 8px
  height 100%
  overflow hidden
