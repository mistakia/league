.auction
  display flex
  height 100%
  flex-direction column

.auction__header
  flex 0 0 146px
  display flex
  flex-direction column
  border-top 1px solid $borderColor
  height 146px

.auction__menu
  display flex
  height 100%
  flex-direction column

  .TabPanelUnstyled-root
    height 100%
    position relative

  .TabsListUnstyled-root
    flex 0 0 auto

.auction__players
  flex 1
  max-width 300px
  display flex
  flex-direction column
  background white
  border 1px solid $borderColor
  margin 1%
  border-radius 3px

.auction__players-header
  flex 0 0 auto
  border-bottom 1px solid $borderColor
  margin 0 16px
  padding 16px 0
  display flex
  align-items center
  .search__filter
    border 1px solid $borderColor
    border-radius 8px

.auction__players-footer
  flex 0 0 auto
  border-top 1px solid $borderColor
  display flex
  padding 4px 16px
  margin 0 16px
  jusitfy-content end
  .MuiFormGroup-root
    flex 1
  .MuiFormControlLabel-label
    font-size 11px

.auction__players-body
  flex 1
  height 100%
  overflow hidden
  overflow-y scroll

.auction__teams
  display flex
  flex-wrap nowrap
  align-items center
  background white
  margin-bottom 24px
  border-top 1px solid $borderColor
  border-bottom 1px solid $borderColor

.auction__main-board
  display flex
  height 100%
  flex-direction column
  flex 1
  overflow hidden
  overflow-y scroll

.auction__side
  flex 1
  min-width 280px
  display flex
  flex-direction column
  padding 1%
  height 100%
  overflow hidden

.auction__log
  flex 1
  border-top 1px solid $borderColor
  border-radius 3px
  height 100%
  overflow hidden

@media (max-width 1049px)
  .auction__players
    display none

@media (max-width 800px)
  .auction__main
    margin 0

  .auction__side
    display none

  .auction__teams
    overflow-x scroll

@media (min-width 1000px)
  .auction__teams
    justify-content center
