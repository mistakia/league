.settings
  max-width 850px
  margin 0 auto
  padding-bottom 160px
  padding-top 32px

  .MuiAccordionDetails-root
    display flex
    flex-direction column

.settings__section
  margin-top 16px
  user-select none

.settings__section-head
  text-transform uppercase
  text-weight 600
  font-size 14px
  color lighten($textColor, 40%)
  padding 16px
  border-bottom 1px solid $borderColor

.settings__section-body
  padding 8px

.settings__section-row
  flex 1
  display flex

.settings__help
  padding 8px 16px
  color lighten($textColor, 30%)
  line-height 20px

// label alignment
.settings__notifications .MuiTypography-root.MuiFormControlLabel-label.MuiTypography-body1
  min-width 200px

.settings__section-header
  font-size 1.6em
  font-weight 200
  padding 16px 0

.settings__section-title
  font-size 0.9375rem
  flex-basis 33.33%
  flex-shrink 0
  display flex
  align-items center

.settings__section-description
  color rgba(0, 0, 0, 0.54)
  font-size 0.9375rem

.settings__section-action
  flex 1
  display flex
  justify-content flex-end
