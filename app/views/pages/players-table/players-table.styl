.players__head
  flex 1
  display flex
  flex-direction column
  width 100%

.players__head-expand.MuiButtonBase-root
  flex 1 1 100%
  display flex
  height 20px
  margin-bottom 4px
  .MuiSvgIcon-root
    transition opacity 200ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,transform 200ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
    border-radius 99em
  &:hover .MuiSvgIcon-root
    background white

.players__filters
  flex 0 0 auto
  display flex
  flex-direction column
  width 100%

  &.expanded .players__head-expand .MuiSvgIcon-root
    transform rotate(180deg)

.players__filters-row
  flex 0 0 auto
  border-bottom 1px solid $borderColor
  padding 4px 32px 0
  display flex
  align-items center
  flex-wrap wrap
  >
    .search__filter
    .players__view-export
      margin 4px

.players__header
  position sticky
  top 0
  flex 1
  z-index 2
  background $backgroundColor
  width max-content
  min-width 100%
  height 48px
  display flex
  align-items stretch
  font-weight 500
  border-bottom 1px solid $borderColor

.row__group
  flex 0 0 auto
  display inline-flex
  flex-direction column
  justify-content center
  align-items center
  position relative
  + .row__group
  + .table__cell
      border-left 1px solid $borderColor

.table__cell
  + .row__group
      border-left 1px solid $borderColor

.row__group-head
  font-family 'IBM Plex Mono', monospace
  font-weight 800
  flex 0 0 auto
  text-transform uppercase
  font-size 11px
  padding 4px
  border-bottom 1px solid $borderColor
  width 100%
  text-align center
  min-height 24px
  display flex
  align-items center
  justify-content center
  letter-spacing 1px

.players__header
  .row__group-head
    overflow hidden
    text-overflow ellipsis
    position absolute
    top 0
    left 0
    right 0


.row__group-body
  flex 1
  display flex
  justify-content space-evenly
  align-items stretch
  width 100%

.players__table
  absolute left 0px top 0px right 0px bottom 0px
  overflow scroll
  overflow-y scroll
  overflow-x scroll

  .table
    padding-left 0

  .row
    background $backgroundColor
    &.selected
      background lighten($accentColor, 85%)

    &.fa
      background lighten(orange, 80%)
    &.fa .player__row-status-column
      color rgba(0,0,0,0.3)

    &.rostered
      background lighten($yellow, 12%)

    &.baseline__player
      border-bottom 2px solid red

    &.draft-order-1
    &.draft-order-1 .player__row-name-column
      background lighten($red, 12%)
      color white

    &.draft-order-2
    &.draft-order-2 .player__row-name-column
      background lighten($orange, 12%)

    &.draft-order-3
    &.draft-order-3 .player__row-name-column
      background lighten($purple, 12%)
      color white

    &.draft-order-4
    &.draft-order-4 .player__row-name-column
      background lighten($pink, 12%)

    &.draft-order-5
    &.draft-order-5 .player__row-name-column
      background lighten($green, 12%)
      color white

    &.draft-order-6
    &.draft-order-6 .player__row-name-column
      background lighten($cyan, 12%)

    &.draft-order-7
    &.draft-order-7 .player__row-name-column
      background lighten($blue, 12%)
      color white

    &.draft-order-8
    &.draft-order-8 .player__row-name-column
      background lighten($navy, 12%)
      color white

    &.draft-order-9
    &.draft-order-9 .player__row-name-column
      background lighten($lime, 12%)

    &.draft-order-10
    &.draft-order-10 .player__row-name-column
      background lighten($brown, 12%)
      color white

    &.draft-order-11
    &.draft-order-11 .player__row-name-column
      background lighten($mint, 12%)

    &.draft-order-12
    &.draft-order-12 .player__row-name-column
      background lighten($maroon, 12%)
      color white

@media (max-width 600px)
  .players__head
    margin-top 8px

  .players__view-export.MuiButton-root
    display none

  .players__filters-row
    padding 4px

  .search__filter
    flex 1
    flex-basis 100%
