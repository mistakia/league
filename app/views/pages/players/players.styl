.players__head
  flex 1
  display flex
  flex-direction column
  width 100%

.players__head-expand.MuiButtonBase-root
  flex 1 1 100%
  display flex
  height 20px
  margin-bottom 4px
  .MuiSvgIcon-root
    transition opacity 200ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,transform 200ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
    border-radius 99em
  &:hover .MuiSvgIcon-root
    background white

.players__filters
  flex 0 0 auto
  display flex
  flex-direction column
  width 100%

  &.expanded .players__head-expand .MuiSvgIcon-root
    transform rotate(180deg)

.players__filters-row
  flex 0 0 auto
  border-bottom 1px solid $borderColor
  padding 4px 32px 0
  display flex
  align-items center
  flex-wrap wrap
  >
    .search__filter
    .players__view-menu
    .players__view-export
      margin 4px

.players__header
  position sticky
  top 0
  flex 1
  z-index 2
  background $backgroundColor
  width max-content
  min-width 100%
  height 55px
  display flex
  align-items stretch
  font-weight 500
  border-bottom 1px solid $borderColor

.row__group
  flex 0 0 auto
  display inline-flex
  flex-direction column
  justify-content center
  align-items center
  position relative
  + .row__group
  + .table__cell
      border-left 1px solid $borderColor

.table__cell:not(.player__item-name)
  + .row__group
      border-left 1px solid $borderColor

.row__group-head
  font-family 'IBM Plex Mono', monospace
  font-weight 800
  flex 0 0 auto
  text-transform uppercase
  font-size 9px
  padding 2px
  border-bottom 1px solid $borderColor
  width 100%
  text-align center
  height 24px
  display flex
  align-items center
  justify-content center
  letter-spacing 1px

.players__header
  .row__group-head
    overflow hidden
    text-overflow ellipsis
    position absolute
    top 0
    left 0
    right 0
  .row__group-body
    align-items flex-end


.row__group-body
  flex 1
  display flex
  justify-content space-evenly
  align-items stretch
  width 100%
  height 40px

.players__table
  absolute left 0px top 0px right 0px bottom 0px
  overflow scroll

@media (max-width 600px)
  .players__head
    margin-top 8px

  .players__view-export.MuiButton-root
    display none

  .players__filters-row
    padding 4px

  .search__filter
    flex 1
    flex-basis 100%
