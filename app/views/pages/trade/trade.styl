.trade
  display flex
  margin-bottom 150px

.trade__main
  flex 5
  height 100%

.trade__side
  flex 1
  height 100%

.trade__head
  display flex
  margin-top 16px
  .trade__box
    height 300px
  .trade__box-body
    height 100%
    overflow-y scroll

.trade__box
  background white
  border 1px solid $borderColor
  flex 1
  display flex
  flex-direction column
  margin 8px

.trade__box-head
  flex 0 0 auto
  border-bottom 1px solid $borderColor
  display flex
  justify-content center
  align-items center
  padding 8px
  font-weight 600

.trade__box-body
  flex 1

.trade__summary
  display flex

.trade__offer
  margin-left 5px

.trade__body
  margin-top 16px

.trade__action
  margin 8px
