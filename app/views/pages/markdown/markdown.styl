.markdown
  margin 0 auto
  max-width 650px
  margin-bottom 150px
  p
    padding-bottom 16px
  ul
    list-style-type none
    padding-left 16px
  a
    line-height 16px
    border-bottom 1px solid $accentColor
  li
    padding-bottom 8px
  a:hover
    color $accentColor

  table
    border-collapse collapse
    margin-bottom 16px
    background white
    width 100%
    tr
      border-top 1px solid $borderColor
      &:hover
        background #fafafa
    td
    th
      padding 6px 13px
      border 1px solid $borderColor
