.table__container
  width 100%
  overflow-x auto

.table__row
  width max-content
  min-width 100%
  position relative
  display flex
  align-items center
  background white
  &:not(:last-child)
    border-bottom 1px solid rgba(224, 224, 224, 1)

.table__head
  align-items center
  height 48px
  border-bottom 1px solid rgba(224, 224, 224, 1)
  font-size 11px
  text-transform uppercase
  font-weight 500

.table__cell
  flex 1 0 60px
  width 60px
  display flex
  align-items center
  height 100%
  padding 6px 24px 6px 16px
  &.metric
    justify-content flex-start

.table__head .table__cell
  height 100%
  font-size 10px
  font-weight 600
  text-transform capitalize
  line-height 1.43

.table__row:last-child .table__cell
  border-bottom none

.sticky__column
  position sticky
  left 0

.table__row-summary
  .table__cell.sticky__column
    justify-content flex-end
    font-weight 600
    padding 6px 24px 6px 16px
